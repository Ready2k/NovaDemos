{
  "name": "voice-s2s-backend",
  "version": "1.0.0",
  "description": "Real-time voice-to-voice assistant backend with Amazon Nova Sonic",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs'); const pkg=require('./package.json'); fs.writeFileSync('dist/build-info.json', JSON.stringify({version:pkg.version,buildTime:new Date().toISOString(),name:pkg.name}, null, 2));\"",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js"
  },
  "keywords": [
    "websocket",
    "audio",
    "nova-sonic",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.944.0",
    "@aws-sdk/client-bedrock-agent-runtime": "^3.943.0",
    "@aws-sdk/client-bedrock-agentcore": "^3.946.0",
    "@aws-sdk/client-bedrock-runtime": "^3.943.0",
    "@aws-sdk/client-polly": "^3.946.0",
    "@aws-sdk/client-transcribe-streaming": "^3.943.0",
    "aws4": "^1.12.0",
    "dotenv": "^17.2.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.6.0"
  }
}
