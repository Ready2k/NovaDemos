{
    "name": "string_formatter",
    "description": "Formats strings in various ways",
    "inputSchema": {
        "type": "object",
        "properties": {
            "text": {
                "type": "string",
                "description": "The text to format"
            },
            "format": {
                "type": "string",
                "enum": [
                    "uppercase",
                    "lowercase",
                    "capitalize"
                ],
                "description": "The formatting style to apply"
            }
        },
        "required": [
            "text",
            "format"
        ]
    }
}