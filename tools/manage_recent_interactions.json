{
  "name": "manage_recent_interactions",
  "description": "Retrieves history/disputes at start, OR publishes summary at end.",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": [
          "RETRIEVE",
          "PUBLISH"
        ],
        "description": "'RETRIEVE' for history; 'PUBLISH' for summary."
      },
      "accountNumber": {
        "type": "string"
      },
      "sortCode": {
        "type": "string"
      },
      "summary": {
        "type": "string",
        "description": "[REQUIRED for PUBLISH] Summary of conversation."
      },
      "outcome": {
        "type": "string",
        "enum": [
          "RESOLVED_QUERY",
          "DISPUTE_RAISED",
          "FRAUD_HANDOFF",
          "GAMBLING_HANDOFF",
          "DISPUTE_HANDOFF",
          "VULNERABILITY_HANDOFF",
          "ACCOUNT_FROZEN_HANDOFF",
          "INFO_ONLY"
        ],
        "description": "[REQUIRED for PUBLISH] Final classification."
      }
    },
    "required": [
      "action",
      "accountNumber",
      "sortCode"
    ]
  },
  "gatewayTarget": "manage-recent-interactions___manage_recent_interactions"
}