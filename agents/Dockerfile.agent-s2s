# Agent Dockerfile - S2S Mode with Nova Sonic
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci

# Copy source
COPY src ./src

# Build
RUN npm run build

# Runner stage
FROM node:20-alpine AS runner

WORKDIR /app

# Copy package files and install production dependencies only
COPY package*.json ./
RUN npm ci --only=production

# Copy built files from builder
COPY --from=builder /app/dist ./dist

# Workflow file will be mounted at runtime
# VOLUME ["/app/workflow.json"]

# Expose port (will be overridden by docker-compose)
EXPOSE 8081

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD node -e "require('http').get('http://localhost:' + (process.env.AGENT_PORT || 8081) + '/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start S2S agent runtime
CMD ["node", "dist/agent-runtime-s2s.js"]
